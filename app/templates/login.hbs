<div class="page-header text-center">
  <h2>Login</h2>
</div>

<div class="text-center" >
  <div class="row login-box">
    <div class="col-md-6 col-sm-6 login-form" {{action 'validate' on='submit'}}>
      <form {{bind-attr class=":text-center error:has-error" }}{{action 'login' on='submit'}}>
        <label class="control-label" >{{message}}</label>
        <div class='form-group'>
          {{input value=username placeholder='Username' class='form-control login-input'}}
        </div>
        <div class="form-group">
          {{input value=password placeholder='Password' class='form-control login-input' type='password'}}
        </div>
        <button type="submit" class="btn btn-info btn-block login-input">
          {{#if spinner}}
            <i class="fa fa-spinner fa-spin"></i> Logging in...
          {{else}}
            Login
          {{/if}}
        </button>
      </form>
    </div>
    <div class="col-md-6 col-sm-6 login-info">
      <div>
        <p>
          Not registered?
        </p>
         {{#link-to 'register' tagName='button' class="btn btn-success btn-block login-button"}}
          Sign Up
         {{/link-to}}
        </div>
    </div>
  </div>
</div>
{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Login failed:</strong> {{errorMessage}}
  </div>
{{/if}}
